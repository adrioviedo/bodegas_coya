---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";

export const prerender = true;
---

<Layout title="Página no encontrada - Bodegas Coya e Hijos">
  <main
    class="m-auto flex w-full flex-wrap items-center justify-center text-primary gap-10 p-20"
  >
    <a href="/">
      <img src="./img/LOGO-COYA.png" alt="" class="w-44" />
    </a>
    <div
      class="text-[#261B0C] items-center text-center text-pretty flex flex-col gap-6 max-w-[65%]"
    >
      <h1 class="text-5xl font-Anton">error 404</h1>
      <h2 class="text-4xl font-bold font-Roboto">Página no encontrada</h2>
      <p class="text-lg font-Roboto">
        ¡Hola! Lo sentimos, pero no pudimos encontrar lo que buscabas. Verifica
        que la dirección URL sea correcta.
      </p>
      <a
        href="/"
        class="mt-3 px-8 py-2 bg-[#450408] text-[#FFE6BB] rounded-xl hover:bg-[#84181fb1] transition cursor-pointer"
      >
        Volver al inicio
      </a>
    </div>
  </main>
  <Footer class="bg-[#450408] text-[#FFE6BB] absolute bottom-0" />
</Layout>
